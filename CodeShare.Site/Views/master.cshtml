@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    @await Html.PartialAsync("Partials/SiteLayout/_MetaData")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lora">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">

    @{
        //styles
        SmidgeHelper.RequiresCss("/csusk-assets/css/styles.min.css");
        SmidgeHelper.RequiresCss("/csusk-assets/css/Article-Clean.css");
        SmidgeHelper.RequiresCss("/csusk-assets/css/Article-List.css");
        SmidgeHelper.RequiresCss("/csusk-assets/css/Carousel-Hero.css");
        SmidgeHelper.RequiresCss("/csusk-assets/css/Contact-Form-Clean.css");
        SmidgeHelper.RequiresCss("/csusk-assets/css/Footer-Basic.css");
        SmidgeHelper.RequiresCss("/csusk-assets/css/News-Cards.css");
        SmidgeHelper.RequiresCss("/csusk-assets/css/Navigation-Clean1.css");

        //scripts
        SmidgeHelper.RequiresJs("https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js");
    }

    @await SmidgeHelper.CssHereAsync(debug: true)

</head>
<body>
    @await Html.PartialAsync("Partials/SiteLayout/_MainNavigation")

    @RenderBody()

    @await Html.PartialAsync("Partials/SiteLayout/_Footer")

    @await SmidgeHelper.JsHereAsync(debug: true)
</body>
</html>